<!DOCTYPE html>
<html>
	<body>
		<h1>Register</h1>

		<%= form_tag("/register", method: "post") do %>
		  <%= label_tag(:email, "Email:") %>
		  <br/>
		  <%= text_field_tag(:email) %>
		  <br/>
		  <%= label_tag(:password, "Password:") %>
		  <br/>
		  <%= password_field_tag(:password) %>
		  <br/>
		  <br/>
		  <%= submit_tag("Register") %>
		<% end %>
		
		<br/>
		<%= @error %>

	</body>
</html>
