<!DOCTYPE html>
<html>
	<body>
		<h1>Login</h1>

		<%= form_tag("/login", method: "post") do %>
		  <%= label_tag(:email, "Email:") %>
		  <br/>
		  <%= text_field_tag(:email) %>
		  <br/>
		  <%= label_tag(:password, "Password:") %>
		  <br/>
		  <%= password_field_tag(:password) %>
		  <br/>
		  <br/>
		  <%= submit_tag("Login") %>
		<% end %>
		
		<br/>
		<%= @error %>
		<br/>

		 <a href="/register">Register</a> 
	</body>
</html>
